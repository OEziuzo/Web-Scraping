
"""
A webscraping project to extract a table from a website
"""

# import the needed modules

import requests

from bs4 import BeautifulSoup as bs

import pandas as pd

url = 'https://www.worldometers.info/world-population/'

page = requests.get(url)
page

soup = bs(page.text, 'lxml')
soup

table = soup.find('table', {'class':'table table-striped table-bordered table-hover table-condensed table-list'})
table

columns = table.find_all('th')
columns

column_list = []

for i in columns:
    column = i.text
    column_list.append(column)
    
column_list

df = pd.DataFrame(columns=column_list)
df

table_row = table.find_all('tr')[1:]
table_row

for j in table_row:
    row_data = j.find_all('td')
    cell = [k.text for k in row_data]
    length = len(df)
    df.loc[length] = cell
    
    
df.to_csv(r'C:\Users\eziuz\Desktop\table_scraped.csv')
